@model System.Data.DataTable


<html>

<head>

    <title>Practice</title>
</head>

<body>


    <table id="myTable" style="width:50%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
            </tr>
        </thead>


        @{


            for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i][0]</td>
                    <td>@Model.Rows[i][1]</td>
                    <td>@Model.Rows[i][2]</td>
                    <td>@Model.Rows[i][3]</td>
                    <td>
                        <form action="display/GetEdit" method="get">
                            <input type="hidden" value="@Model.Rows[i][0]" name="id">
                            <button type="submit">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="delete" id="delF" method="Post">
                            <input type="hidden" value="@Model.Rows[i][0]" name="id">
                            <button id="del" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        }


        <tfoot>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
            </tr>
        </tfoot>
    </table>


    <h1>Get a better view of table</h1>
    <form action="table" method="get">
        <button type="submit">Click Here</button>
    </form>
</body>

</html>