@model System.Data.DataTable
@{
    ViewBag.Title = "GetEdit";
}

<html>

<head>

    <title>Practice</title>

</head>

<body>

    @{ 
        for (int i = 0; i < Model.Rows.Count; i++)
        {
        <form action="/display/EditSubmit" method="post">
            <label>Name</label>
            <input type="text" name="name" value="@Model.Rows[i][1]"><br><br>
            <label>email</label>
            <input type="text" name="email" value="@Model.Rows[i][2]"><br><br>
            <label>Password</label>
            <input type="text" name="password" value="@Model.Rows[i][3]"><br><br>
            <input type="hidden" value="@Model.Rows[i][0]" name="id">
            <button type="submit">Edit</button>
        </form>
        }
     }

</body>

</html>